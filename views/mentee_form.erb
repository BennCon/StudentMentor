<%= erb :"commons/header" %>
<div id="form-div">
    
<form method="post" id="form-style">
    <div id="mentor-bottom">
         <h2>Signing up as a </h2> 
         <h2 id="orange"> MENTEE</h2>
    </div>
   <% unless @mentee.errors.size.zero? %>
       <p><strong class="error">Please correct the errors below:</strong></p>
   <% end %>
    <div class="flex-row">
    <p class="label">First name</p>
    <p class="field"><input type="text" name="first_name" required/></p>
    <% if @mentee.errors.include?("first_name") %>
        <% @mentee.errors["first_name"].each do |error| %>
           <p class="error"><strong>First name <%= error %></strong></p>
        <% end %>
    <% end %>
       
    <p class="label">Surname</p>
    <p class="field"><input type="text" name="surname" required/></p>
    <% if @mentee.errors.include?("surname") %>
        <% @mentee.errors["surname"].each do |error| %>
           <p class="error"><strong>Surname <%= error %></strong></p>
        <% end %>
    <% end %>
       
    <p class="label">Username</p>
    <p class="field"><input type="text" name="username" required/></p>
    <% if @mentee.errors.include?("username") %>
        <% @mentee.errors["username"].each do |error| %>
           <p class="error"><strong>Username <%= error %></strong></p>
        <% end %>
    <% end %>
    </div>
    
    <p class="label">Course</p>
    <p class="field"><input type="text" name="course" required/></p>
    <% if @mentee.errors.include?("course") %>
        <% @mentee.errors["course"].each do |error| %>
           <p class="error"><strong>Course <%= error %></strong></p>
        <% end %>
    <% end %>
    
    <p class="label">Gender</p>
    <select class="field" name="gender" required>
      <option value="male">Male</option>
      <option value="female">Female</option>
      <option value="non_binary">Non-binary</option>
    </select>
    
    <p class="label">Year of Study</p>
    <select class="field" name="year_of_study" required>
      <option value="1">1st</option>
      <option value="2">2nd</option>
      <option value="3">3rd</option>
      <option value="4">4th</option>
    </select>
    
    <div class="flex-row">
    <p class="label">Email</p>
    <p class="field"><input type="email" name="email" required/></p>
    <% if @mentee.errors.include?("email") %>
        <% @mentee.errors["email"].each do |error| %>
           <p class="error"><strong>Email <%= error %></strong></p>
        <% end %>
    <% end %>
       
    <p class="label">Password</p>
    <p class="field"><input type="password" name="password" required/></p>
    <% if @mentee.errors.include?("password") %>
        <% @mentee.errors["password"].each do |error| %>
           <p class="error"><strong>Password <%= error %></strong></p>
        <% end %>
    <% end %>
    </div>
    <button type="submit" id="button" name="mentee_submit"> Submit </button>
</form>
</div>
<%= erb :"commons/footer" %>