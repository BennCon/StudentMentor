<%= erb :"commons/header" %>
<div id="form-div">
<form method="post" id="form-style">
    <div id="mentor-bottom">
         <h2>Signing up as a </h2> 
         <h2 id="orange"> MENTOR</h2>
     </div>
    <div class="flex-row">
    <p class="label">First name</p>
    <p class="field"><input type="text" name="first_name" required/></p>
    <% if @mentor.errors.include?("first_name") %>
        <% @mentor.errors["first_name"].each do |error| %>
           <p class="error"><strong>First name <%= error %></strong></p>
        <% end %>
    <% end %>   
       
    <p class="label">Surname</p>
    <p class="field"><input type="text" name="surname" required/></p>
    <% if @mentor.errors.include?("surname") %>
        <% @mentor.errors["surname"].each do |error| %>
           <p class="error"><strong>Surname <%= error %></strong></p>
        <% end %>
    <% end %>      
       
    <p class="label">Username</p>
    <p class="field"><input type="text" name="username" required/></p>
    <% if @mentor.errors.include?("username") %>
        <% @mentor.errors["username"].each do |error| %>
           <p class="error"><strong>Username <%= error %></strong></p>
        <% end %>
    <% end %>          
       
    </div>
    <p class="label">Gender</p>
    <select class="field" name="gender" required>
      <option value="male">Male</option>
      <option value="female">Female</option>
      <option value="non_binary">Non-binary</option>
    </select>
    
    <p class="label">Industry</p>
    <select class="field" name="industry" required>
        <option value="Aerospace">Aerospace</option>
        <option value="Agriculture">Agriculture</option>
        <option value="Animal">Animal care</option>
        <option value="Automotive">Automotive</option>
        <option value="Bio">Bio</option>
        <option value="Education">Education</option>
        <option value="Energy">Energy</option>
        <option value="Eashion">Fashion</option>   
        <option value="Einance">Finance</option>
        <option value="Food">Food industry</option>
        <option value="Government">Government</option>
        <option value="Health">Health</option>
        <option value="HR">HR</option>
        <option value="IT">IT</option>
        <option value="Media">Media and Communications</option>
        <option value="Pharmacy">Pharmacy</option>
        <option value="Retail">Retail</option>
        <option value="Sport">Sport</option>  
        <option value="Transport">Transport</option>
        <option value="Tourism">Tourism</option>
    </select>
    
    <p class="label">Company</p>
    <p class="field"><input type="text" name="company" required/></p>
    <% if @mentor.errors.include?("company") %>
        <% @mentor.errors["company"].each do |error| %>
           <p class="error"><strong>Company <%= error %></strong></p>
        <% end %>
    <% end %>   
     
    <p class="label">Are you a Sheffield graduate?</p>
    <input type="radio"  name="sheffield_graduate" value="1" id="yes" required>
    <label for="yes">Yes</label><br>
    <input type="radio" name="sheffield_graduate" value="0" id="no" required>
    <label for="no">No</label><br>
    
    <p class="label">Degree field</p>
    <select class="field" name="degree_field" required>
      <option value="accounting">Accounting</option>
      <option value="aerospace">Aerospace</option>
      <option value="agriculture">Agriculture</option>
      <option value="archaeology">Archaeology</option>
      <option value="architecture">Architecture</option>
      <option value="biology">Biology</option>
      <option value="business">Business</option>
      <option value="chemistry">Chemistry</option>
      <option value="computer_science">Computer Science</option>
      <option value="dentistry">Dentistry</option>
      <option value="economics">Economics</option>
      <option value="education">Education</option>
      <option value="engineering">Engineering</option>
      <option value="geography">Geography</option>
      <option value="history">History</option>
      <option value="health">Health</option>
      <option value="hr">HR</option>
      <option value="it">IT</option>
      <option value="linguistics">Linguistics</option>
      <option value="mathematics">Mathematics</option>
      <option value="media">Media and Communications</option>
      <option value="medicine">Medicine</option>
      <option value="pharmacy">Pharmacy</option>
      <option value="physics">Physics</option>
      <option value="psychology">Psychology</option>
      <option value="sport">Sport</option>  
    </select>
    
    <div class="flex-row">
    <p class="label">Email</p>
    <p class="field"><input type="email" name="email" required/></p>
    <% if @mentor.errors.include?("email") %>
        <% @mentor.errors["email"].each do |error| %>
           <p class="error"><strong>Email <%= error %></strong></p>
        <% end %>
    <% end %>
       
    <p class="label">Password</p>
    <p class="field"><input type="password" name="password" required/></p>
    <% if @mentor.errors.include?("password") %>
        <% @mentor.errors["password"].each do |error| %>
           <p class="error"><strong>Password <%= error %></strong></p>
        <% end %>
    <% end %>          
       
    </div>
    <%= erb :"submit_button" %>
</form>
</div>
<%= erb :"commons/footer" %>