            </section>
            <section id="information"> 
                <h2> Basic information</h2>
                <p> User type: Admin. </p>
                <p> First name: <strong><%= @admin.first_name %></strong></p>
                <p> Surname: <strong><%= @admin.surname %></strong></p>
