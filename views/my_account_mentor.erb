<%= erb :"commons/header" %>
<div id="page">
        <aside>
            <div id="profile">
                 <figure>
                    <!--this img just for testing-->
                    <img src="/background.jpeg" alt="personal Id picture">
                    <figcaption><%= @mentor.email %></figcaption>
                </figure>
            </div>
            <nav class="menu">
                <li class="menu_selected"><a href="/my-account-mentor?id=<%= @mentor.id %>"> > My Account</a></li>
                <li><a href="/requests-mentor?id=<%= @mentor.id %>"> > My Requests</a></li>
                <li><a href="/get-help-mentor?id=<%= @mentor.id %>"> > Get Help</a></li>
                <li><a href="/"> > Logout</a></li>
            </nav>
        </aside>
        <main>
            <section id="profile"> 
                <figure>
                    <!--this img just for testing-->
                    <img src="/background.jpeg" alt="personal Id picture">
                </figure>
            </section>
            <section id="information"> 
                <h2> Basic information</h2>
                <p> User type: Mentor. </p>
                <p> First name: <strong><%= h @mentor.first_name %></strong></p>
                <p> Surname: <strong><%= h @mentor.surname %></strong></p>
                <p> Email: <strong><%= h @mentor.email %></strong></p>
                <p> Industry: <strong><%= @mentor.industry%></strong></p>
                <p> Biography: <strong> <%= h @mentor.biography %> </strong></p>
                
                <button class="button" name="accEdit">Edit details</button>
                <form method="post" action="/my-account-mentor" id="accDetails" class="accDetails">
                        <label for="email">Enter your Email</label>
                        <input type="email" name="email" id="email" value="<%= h @mentor.email%>" required>
                        <label for="first_name">Enter your first name</label>
                        <input type="name" name="first_name" id="name" value="<%= h @mentor.first_name%>" required>
                        <label for="surname">Enter your surname</label>
                        <input type="name" name="surname" id="name" value="<%= h @mentor.surname%>" required>
                        <label> Choose Industry </label>
                         <select  name="industry">
                              <option value="Aerospace">Aerospace</option>
                              <option value="Agriculture">Agriculture</option>
                              <option value="Animal">Animal care</option>
                              <option value="Automotive">Automotive</option>
                              <option value="Bio">Bio</option>
                              <option value="Education">Education</option>
                              <option value="Energy">Energy</option>
                              <option value="Eashion">Fashion</option>   
                              <option value="Einance">Finance</option>
                              <option value="Food">Food industry</option>
                              <option value="Government">Government</option>
                              <option value="Health">Health</option>
                              <option value="HR">HR</option>
                              <option value="IT">IT</option>
                              <option value="Media">Media and Communications</option>
                              <option value="Pharmacy">Pharmacy</option>
                              <option value="Retail">Retail</option>
                              <option value="Sport">Sport</option>  
                              <option value="Transport">Transport</option>
                              <option value="Tourism">Tourism</option>
                        </select>
                        <label for="biography">Edit your biography:</label>
                        <textarea name="biography" id="biography" rows="10" cols="40"></textarea>
                        <button type="submit" action="submit" id="button" name="save"> save changes</button>
                    </form>
                <script>
                    var submitButton = document.getElementsByClassName('button')[0]
                    var accdetails = document.getElementsByClassName('accDetails')[0]
                    submitButton.addEventListener('click',function(a){accdetails.classList.toggle('active')})
                </script>
            </section>
        </main>
</div>
<%= erb :"commons/footer" %>