<%= erb :"commons/header" %>
<div id="page">
        <aside>
            <div id="profile">
                <figure>
                    <!--this img just for testing-->
                    <img src="/background.jpeg" alt="personal Id picture">
                    <figcaption><%= @mentee.email %></figcaption>
                </figure>
            </div>
            <nav class="menu">
                <li class="menu_selected"><a href="/my-account-mentee"> > My Account</a></li>
                <li><a href="/find-mentor"> > Find A Mentor</a></li>
                <li><a href="/requests-mentee"> > My Requests</a></li>
                <li><a href="/get-help-mentee"> > Get Help</a></li>
                <li><a href="/"> > Logout</a></li>
                
            </nav>
        </aside>
        <main>
            <section id="profile"> 
                <figure>
                    <!--this img just for testing-->
                    <img src="/background.jpeg" alt="personal Id picture">
                </figure>
            </section>
            <section id="information"> 
                     <div id="mentor-bottom">
                       <h2>Basic</h2> 
                       <h2 id="orange"> Information</h2>
                    </div>
                <p> User type: Mentee. </p>
                <p> First name: <strong><%= @mentee.first_name %></strong></p>
                <p> Surname: <strong><%= @mentee.surname %></strong></p>
                <p> Username: <strong><%= @mentee.username %></strong></p>
                <p> Email: <strong><%= @mentee.email %></strong></p>
                <p> Year of Study: <strong><%= @mentee.year_of_study %></strong></p>
                <p> University: <strong> <%= @mentee.university %></strong></p>
                <p> Course: <strong> <%= @mentee.course %></strong></p>
                <p> Biography: <strong> <%= @mentee.biography %></strong></p>
                <button id="button" class="button" name="accEdit">Edit details</button>
                <form method="post" action="/my-account-mentee" id="accDetails" class="accDetails">
                        <label for="email">Edit your Email</label>
                        <input type="email" name="email" id="email" value="<%= h @mentee.email%>" required>
                        <label for="first_name">Edit your first name</label>
                        <input type="name" name="first_name" id="name" value="<%= h @mentee.first_name%>" required>
                        <label for="surname">|Edit your surname</label>
                        <input type="name" name="surname" id="name" value="<%= h @mentee.surname%>" required>
                        <label for="username">|Edit your username</label>
                        <input type="username" name="username" id="username" value="<%= h @mentee.username%>" required>
                        <label> Choose year of study </label>
                         <select name="year_of_study" required>
                          <option value="<%= h @mentee.year_of_study%>"><%= h @mentee.year_of_study%></option>
                          <option value="1">1</option>
                          <option value="2">2</option>
                          <option value="3">3</option>
                          <option value="4">4</option>
                        </select>
                        <label for="surname">Edit your course</label>
                        <input type="course" name="course" id="name" value="<%= h @mentee.course%>" required>
                        <label for="biography">Edit your biography:</label>
                        <textarea name="biography" id="biography" rows="10" cols="40" required><%= h @mentee.biography%></textarea>
                        <button type="submit" action="submit" id="button" name="save"> save changes</button>
                    </form>
                <script>
                    var submitButton = document.getElementsByClassName('button')[0]
                    var accdetails = document.getElementsByClassName('accDetails')[0]
                    submitButton.addEventListener('click',function(a){accdetails.classList.toggle('active')})
                </script>
            </section>
        </main>
</div>
<%= erb :"commons/footer" %>